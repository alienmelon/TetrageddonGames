package tetrigeddon.display {	/*	 * Bubble that contains text.	 */	 	 import flash.display.MovieClip;	 import flash.utils.*;	 	public class ComicBubble	{		//		public var _mainTimeline:MovieClip;		public var _stage:Object;		//		private var _mc:MovieClip;		private var _mcd:Array;		private var _id:Number;		private var _id2:Number;			public function ComicBubble(X:Number, Y:Number, s:String, __mainTimeline:MovieClip)		{						this._mainTimeline = __mainTimeline;			this._stage = __mainTimeline.parent;						_mc = null;						var MC:Class = getDefinitionByName(s) as Class;			var _mc:MovieClip = new MC();			_mainTimeline.addChild(_mc);			//			_mainTimeline.ARR_DISPLAY.push(_mc);			//			_mc.x = X;			_mc.y = Y;			_mc.name = "mc_onomatopoeia";			_mc.gotoAndStop(Game.randomNumber(1, 6));			//			_mcd = [_mc.width, _mc.height];						_id = setInterval(bubbleUp, 10, _mc);			_id2 = setInterval(remove, 500, _mc);						// Attach audio commentary.		}			public function bubbleUp(clip:MovieClip)		{			if(_mainTimeline.stopGame){				clearInterval(_id);				clearInterval(_id2);							}			//			clip.width = clip.width * 0.9 + (-clip.width + _mcd[0]) * 0.4;			clip.height = clip.height * 0.9 + (-clip.height + _mcd[1]) * 0.4;			return;		}			public function remove(clip:MovieClip)		{			if(_mainTimeline.stopGame){				clearInterval(_id);				clearInterval(_id2);						}			clearInterval(_id);			clearInterval(_id2);			_mainTimeline.removeChild(clip);		}	}}